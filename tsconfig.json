{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@features/*": ["src/features/*"],
      "@agenten/*": ["src/agenten/*"],
      "@globalFeatures/*": ["src/globalFeatures/*"],
      "@layout/*": ["src/layout/*"],
      "@meta/*": ["src/meta/*"],
      "@pages/*": ["./src/pages/*"]
    },
    "outDir": "dist-tools",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tools"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
